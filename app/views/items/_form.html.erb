<%= form_with(model: @item, local: true) do |form| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :name, :class => "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :name, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :category_id, :class => ['col-sm-2', 'col-form-label'] %>
    <div class="col-sm-6">
      <%= form.collection_select :category_id, Category.all, :id, :name, { :prompt => "Select category" }, { :class => 'form-control' } %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :desc, :class => "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_area :desc, :class => "form-control", rows: "5" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :slug, :class => "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :slug, :class => "form-control" %>
    </div>
  </div>

  <h5>Attach image</h5>
      <div class="row">
          <div class="col-md-3 col-lg-2 col-sm-3 col-xs-3">
              <label class="btn btn-default btn-block" style="height: 33px;">
              	<%= form.file_field :image, :accept => 'image/png,image/gif,image/jpeg', :class => "inputFile", :style => "display: none;" %>
                  <%= image_tag("load_img_btn.png", :class => "attachImage") %>
              </label>
          </div>

          <div class="col-md-3 col-lg-3 col-sm-3 pull-right">
              <button type="submit" class="btn btn-primary btn-block">Save</button>
          </div>
          <div class="col-md-3 col-lg-3 col-sm-3 pull-right">
          	<%= link_to 'Back', items_path, :class => "btn btn-default btn-block" %>             
          </div>
      </div>
<% end %>