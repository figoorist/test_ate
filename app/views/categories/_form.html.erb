<%= form_with(model: category, local: true, :class => "form-inline") do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, :class => "control-label col-sm-1" %>
    <div class="col-sm-1"> 
      <%= form.text_field :name, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :parent_id, :class => "control-label col-sm-1" %>
    <div class="col-sm-2">
      <%= form.collection_select :parent_id, Category.all, :id, :name, { :prompt => "None" }, { :class => 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :slug, :class => "control-label col-sm-1" %>
    <div class="col-sm-2">
      <%= form.text_field :slug, :class => "form-control" %>
    </div>
  </div>

  <div class="col-sm-2 pull-right">
    <button type="submit" class="btn btn-primary btn-block">Add</button>
  </div>
<% end %>

